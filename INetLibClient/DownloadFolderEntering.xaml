<Window x:Class="INetLibClient.DownloadFolderEntering"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DownloadFolderEntering" Height="125" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Download folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="downloadFolderBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="249"/>
        <Button x:Name="downloadFolderButton" Content="..." HorizontalAlignment="Left" Margin="259,36,0,0" VerticalAlignment="Top" Width="23" Height="23"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Center" Margin="0,64,0,5" VerticalAlignment="Bottom" Width="75" IsDefault="True"/>
    </Grid>
</Window>
