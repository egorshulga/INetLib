<Window x:Class="INetLibClient.ServerSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server URL" Height="130" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="serverPathBox" HorizontalAlignment="Center" Height="23" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274"/>
        <Label Content="Server URL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="okButton_Click"/>
        <Button x:Name="autdiscoveryButton" Content="Auto discovery" HorizontalAlignment="Right" Margin="0,11,5,0" VerticalAlignment="Top" Width="100" Click="autdiscoveryButton_Click"/>

    </Grid>
</Window>
